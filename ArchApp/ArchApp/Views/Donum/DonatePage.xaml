<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArchApp.Views.Donum.DonatePage"
             NavigationPage.HasNavigationBar="false"
             BackgroundColor="DodgerBlue">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="http://i.huffpost.com/gen/2411572/images/o-HOMELESS-CHRISTMAS-facebook.jpg"
                   Margin="0,50,0,0"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="Center"/>

            <Button Text="Donate Now"
                    FontSize="Medium"
                    TextColor="White"
                    BackgroundColor="LightSlateGray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    x:Name="Donate_Now_Button"
                    WidthRequest="200"
                    HeightRequest="65"
                    Clicked="Donate_Now_Button_Clicked"/>

            <Label Text="Let's make a difference together!"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

            <!--Fake label to organize the layout -->
            <Label
                VerticalOptions="EndAndExpand"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>